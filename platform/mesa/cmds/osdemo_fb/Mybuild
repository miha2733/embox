package embox.cmd

@AutoCmd
@Cmd(name = "osdemo_fb",
	help = "Adopted osdemo application from mesa_demo",
	man = '''
		NAME
			osdemo_fb - Adopted osdemo application from mesa_demo
		SYNOPSIS
			osdemo_fb
		DESCRIPTION
			osdemo_fb - Adopted osdemo application from mesa_demo
		AUTHORS
			Anton Bondarev
	''')
@BuildDepends(third_party.freedesktop.mesa.mesa_osmesa)
@BuildDepends(third_party.freedesktop.mesa.libglu_osmesa)
@Build(stage=2,script="true")
module osdemo_fb {
	@IncludePath("$(ROOT_DIR)/build/extbld/third_party/freedesktop/mesa/libglu_osmesa/glu-9.0.0/include")
	@IncludePath("$(ROOT_DIR)/build/extbld/third_party/freedesktop/mesa/mesa_osmesa/mesa-17.0.3/include")
	source "osdemo_fb.c"
	source "text_layout.c"

	depends embox.driver.video.fonts

	depends third_party.freedesktop.mesa.mesa_osmesa
	depends third_party.freedesktop.mesa.libglu_osmesa
}

@AutoCmd
@Cmd(name = "osdemo_imx6",
	help = "Adopted osdemo application from mesa_demo",
	man = '''
		NAME
			osdemo_fb - Adopted osdemo application from mesa_demo
		SYNOPSIS
			osdemo_fb
		DESCRIPTION
			osdemo_fb - Adopted osdemo application from mesa_demo
		AUTHORS
			Anton Bondarev
	''')
@BuildDepends(third_party.freedesktop.mesa.mesa_imx6)
@BuildDepends(third_party.freedesktop.mesa.libglu_imx6)
@Build(stage=2,script="true")
module osdemo_imx6 {
	@IncludePath("$(ROOT_DIR)/build/extbld/third_party/freedesktop/mesa/libglu_imx6/glu-9.0.0/include")
	@IncludePath("$(ROOT_DIR)/build/extbld/third_party/freedesktop/mesa/mesa_imx6/mesa-17.0.3/include")
	source "osdemo_fb.c"

	depends third_party.freedesktop.mesa.mesa_imx6
	depends third_party.freedesktop.mesa.libglu_imx6
}
